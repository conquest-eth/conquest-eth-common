{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib/esm",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["./test", "./src/**/*"]
}
